{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "pnpm-lock.yaml",
        "tsconfig.json",
        ".prettierrc.json"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                ".nuxt/**",
                ".output/**",
                "storybook-static/**",
                "coverage/**",
                "!.next/cache/**"
            ]
        },
        "build-only": {
            "dependsOn": ["^build-only"],
            "outputs": ["dist/**", "build/**"]
        },
        "lint": {
            "outputs": []
        },
        "lint:eslint": {
            "cache": false
        },
        "lint:oxlint": {
            "cache": false
        },
        "check": {
            "cache": false
        },
        "type-check": {
            "outputs": []
        },
        "typecheck": {
            "outputs": []
        },
        "test": {
            "outputs": ["coverage/**"]
        },
        "test:cv": {
            "outputs": ["coverage/**"]
        },
        "test:unit": {
            "outputs": ["coverage/**"]
        },
        "format": {
            "cache": false
        },
        "generate": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "cache": false,
            "persistent": true
        },
        "storybook": {
            "cache": false,
            "persistent": true
        },
        "serve": {
            "cache": false,
            "persistent": true
        },
        "preview": {
            "cache": false,
            "persistent": true
        },
        "build-storybook": {
            "dependsOn": ["^build-storybook"],
            "outputs": ["storybook-static/**"]
        }
    }
}
